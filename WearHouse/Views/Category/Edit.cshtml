@model WearHouse.Models.Category

@{
    ViewData["Title"] = "Edit";
}

<div class="Edit">
    <div class="container">

        <h1>Edit</h1>

        @section Head {
            <link rel="stylesheet" href="~/css/Edit.css" asp-append-version="true" />
        }

        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit" class="form-group">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="CategoryName" class="control-label"> Name</label>
                        <input asp-for="CategoryName" class="form-control" />
                        <span asp-validation-for="CategoryName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Save" class="button-style button-style-yellow" style="color:darkorange;" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index">Back to List</a>
        </div>

        @section Scripts {
            @{
                await Html.RenderPartialAsync("_ValidationScriptsPartial");
            }
        }

    </div>
</div>
