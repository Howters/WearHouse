@model WearHouse.Models.Category

@{
    ViewData["Title"] = "Create";
}
@section Head {
    <link rel="stylesheet" href="~/css/Create.css" asp-append-version="true" />
}
<div class="AboutUs">
    <div class="container">

        <h1>Add Category</h1>

        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="CategoryName" class="control-label">Category</label>
                        <input asp-for="CategoryName" class="form-control" />
                        <span asp-validation-for="CategoryName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="button-style button-style-blue" style="color:#007bff;" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index">Back to List</a>
        </div>

        @section Scripts {
            @{
                await Html.RenderPartialAsync("_ValidationScriptsPartial");
            }
        }


    </div>
</div>


