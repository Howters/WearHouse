@model WearHouse.Models.Category
@{
    ViewData["Title"] = "Delete";
}

@section Head {
    <link rel="stylesheet" href="~/css/Delete.css" asp-append-version="true" />
}

<div class="Delete">
    <div class="container">

        <h1>Delete</h1>

        <h3>Are you sure you want to delete this?</h3>
        <div>
            <hr />
            <dl class="row">

                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CategoryName)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" />
                <input type="submit" value="Delete" class="button-style button-style-red" style="color:red;" /> |
                <a asp-action="Index" class="button-style button-style-black" style="color:black;">Back to List</a>
            </form>
        </div>

    </div>
</div>
